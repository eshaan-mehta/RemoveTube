{
  "manifest_version": 3,
  "name": "RemoveTube - Anti-Procrastination",
  "version": "1.0.0",
  "description": "Helps prevent unintended procrastination on YouTube by filtering content based on your allowed topics",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "RemoveTube Settings"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.css"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
